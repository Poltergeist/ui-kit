{
  "name": "@dcos/ui-kit",
  "version": "0.2.0",
  "description": "DCOS UI Kit",
  "scripts": {
    "build:docs": "webpack --config webpack.docs.js",
    "build:componentData": "node scripts/generateComponentData",
    "clean": "rimraf dist",
    "commitlint": "commitlint -e",
    "create:component": "./scripts/create-component",
    "dist": "tsc -p tsconfig.dist.json",
    "predist": "npm run clean",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "prerelease": "npm run dist",
    "release": "standard-version",
    "setup:git-hooks": "./scripts/pre-install",
    "start": "NODE_ENV=development npm run start:docs",
    "start:docs": "webpack-dev-server --config webpack.config.docs.js -d",
    "prestart:docs": "npm run build:componentData",
    "test": "jest --config ./jest.config.json",
    "test:watch": "jest --watch"
  },
  "files": ["dist"],
  "license": "Apache-2.0",
  "main": "dist/components/index",
  "typings": "dist/components/index",
  "repository": {
    "type": "git",
    "url": "https://github.com/dcos-labs/ui-kit"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": ["json", "text"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
  },
  "dependencies": {
    "emotion": "9.0.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-emotion": "9.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "@dcos/tslint-config": "0.0.1",
    "@types/jest": "22.2.2",
    "@types/node": "9.4.7",
    "@types/react": "16.0.40",
    "@types/react-dom": "16.0.4",
    "commander": "2.15.1",
    "cz-conventional-changelog": "2.1.0",
    "file-loader": "1.1.10",
    "fs-extra": "5.0.0",
    "html-webpack-plugin": "3.2.0",
    "jest": "22.4.2",
    "node": "8.9.4",
    "npm": "5.6.0",
    "prettier": "1.11.1",
    "prop-types": "15.6.1",
    "react-docgen-typescript-loader": "2.0.2",
    "react-test-renderer": "16.2.0",
    "rimraf": "2.6.2",
    "standard-version": "4.3.0",
    "ts-jest": "22.4.2",
    "ts-loader": "4.2.0",
    "tslib": "1.9.0",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.10.0",
    "tslint-eslint-rules": "5.1.0",
    "tslint-plugin-prettier": "1.3.0",
    "tslint-react": "3.5.1",
    "typescript": "2.7.2",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "3.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
